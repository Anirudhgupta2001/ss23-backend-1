<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div style="background-color: rgba(255, 255, 255, 0.692);" class="card shadow">
                <div class="card-body">
                    <h5 style="font-weight: 700;" class="card-title">Change Password for <%=id%></h5>
                    <form action="/resetPassword/<%=id%>" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="password1">Password :</label>
                            <input required class="form-control" type="password" name="password1" id="password1"
                                >
                            <!-- <div class="valid-feedback">looks good</div> -->
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password2">Password :</label>
                            <input required class="form-control" type="password" name="password2" id="password2"
                                >
                            <!-- <div class="valid-feedback">looks good</div> -->
                        </div>
                        <button class="btn btn-success">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>